<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calc_field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_rounded_rec"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_Ac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_equation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/gray"
            android:fontFamily="@font/doppio_one_regular"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/brown"
            android:fontFamily="@font/doppio_one_regular"
            android:textSize="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:background="@drawable/chip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Ac"
        style="@style/CircleButton.Number"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="AC"
        android:onClick="onClickClear"
        app:layout_constraintBottom_toTopOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_arrow_back"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_arrow_back"
        style="@style/CircleButton.Number"
        android:gravity="center"
        android:src="@drawable/arrow_left"
        android:onClick="onClickBackspace"
        app:layout_constraintEnd_toStartOf="@+id/button_moduls"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_Ac"
        app:layout_constraintTop_toTopOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_moduls"
        style="@style/CircleButton.Operation"
        android:text="%"
        android:onClick="onClickOperation"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_divide"
        style="@style/CircleButton.Operation"
        android:layout_marginEnd="16dp"
        android:text="/"
        android:onClick="onClickOperation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_moduls"
        app:layout_constraintTop_toTopOf="@+id/button_Ac" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_7"
        style="@style/CircleButton.Number"
        android:layout_marginBottom="8dp"
        android:text="7"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toTopOf="@+id/button_4"
        app:layout_constraintEnd_toEndOf="@+id/button_Ac"
        app:layout_constraintStart_toStartOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_8"
        style="@style/CircleButton.Number"
        android:text="8"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_back"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/button_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_9"
        style="@style/CircleButton.Number"
        android:text="9"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_moduls"
        app:layout_constraintStart_toStartOf="@+id/button_moduls"
        app:layout_constraintTop_toTopOf="@+id/button_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_x"
        style="@style/CircleButton.Operation"
        android:text="x"
        android:onClick="onClickOperation"
        app:layout_constraintEnd_toEndOf="@+id/button_divide"
        app:layout_constraintStart_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_7" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_4"
        style="@style/CircleButton.Number"
        android:layout_marginBottom="8dp"
        android:text="4"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toTopOf="@+id/button_1"
        app:layout_constraintEnd_toEndOf="@+id/button_Ac"
        app:layout_constraintStart_toStartOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_5"
        style="@style/CircleButton.Number"
        android:text="5"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_back"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/button_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_6"
        style="@style/CircleButton.Number"
        android:text="6"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_moduls"
        app:layout_constraintStart_toStartOf="@+id/button_moduls"
        app:layout_constraintTop_toTopOf="@+id/button_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Plus"
        style="@style/CircleButton.Operation"
        android:text="+"
        android:onClick="onClickOperation"
        app:layout_constraintEnd_toEndOf="@+id/button_divide"
        app:layout_constraintStart_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_1"
        style="@style/CircleButton.Number"
        android:layout_marginBottom="8dp"
        android:text="1"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toTopOf="@+id/button_Sign"
        app:layout_constraintEnd_toEndOf="@+id/button_Ac"

        app:layout_constraintStart_toStartOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_2"
        style="@style/CircleButton.Number"
        android:text="2"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_back"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_3"
        style="@style/CircleButton.Number"
        android:text="3"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_moduls"
        app:layout_constraintStart_toStartOf="@+id/button_moduls"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Minus"
        style="@style/CircleButton.Operation"
        android:text="-"
        android:onClick="onClickOperation"
        app:layout_constraintEnd_toEndOf="@+id/button_divide"
        app:layout_constraintStart_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Sign"
        style="@style/CircleButton.Number"
        android:layout_marginBottom="32dp"
        android:text="Â±"
        android:onClick="onClickOperation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_Ac"
        app:layout_constraintStart_toStartOf="@+id/button_Ac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_0"
        style="@style/CircleButton.Number"
        android:text="0"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_arrow_back"
        app:layout_constraintStart_toStartOf="@+id/button_arrow_back"
        app:layout_constraintTop_toTopOf="@+id/button_Sign" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Dot"
        style="@style/CircleButton.Number"
        android:text="."
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/button_moduls"
        app:layout_constraintStart_toStartOf="@+id/button_moduls"
        app:layout_constraintTop_toTopOf="@+id/button_Sign" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Equal"
        style="@style/CircleButton.Operation"
        android:text="="
        android:onClick="onClickEquals"
        app:layout_constraintEnd_toEndOf="@+id/button_divide"
        app:layout_constraintStart_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_Sign" />






</androidx.constraintlayout.widget.ConstraintLayout>